<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="well bs-component">
        <form class="form-horizontal" {{action 'authenticate' on="submit"}}>
          <fieldset>
            <legend>Sign In</legend>
            <div class="form-group is-empty">
              <div class="col-md-12">
                {{input value=email class="form-control" placeholder="Email"}}
              </div>
              <span class="material-input"></span>
              <div class="col-md-12">
                {{input value=password type="password" class="form-control" placeholder="Password"}}
              </div>
              <span class="material-input"></span>
            </div>
            <input type="submit" name="submit" class="btn btn-danger" value="sign in">
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>























